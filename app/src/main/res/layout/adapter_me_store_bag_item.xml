<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/shopping_cart_item_iv_check"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/select_is_no" />

        <ImageView
            android:id="@+id/shopping_cart_item_iv_pic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_pic" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/shopping_cart_item_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="长城(greatwall)红酒"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/shopping_cart_item_tv_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/colorRed"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/shopping_cart_item_tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="bottom"
                        android:text="60"
                        android:textColor="@color/colorBtn"
                        android:textSize="16sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:text="DTI"
                        android:textColor="@color/colorBtn"
                        android:textSize="14sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/shopping_cart_item_btn_minus"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/text_margin"
                        android:focusable="false"
                        android:text="-" />

                    <TextView
                        android:id="@+id/shopping_cart_item_tv_num"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="-1dp"
                        android:background="@drawable/text_margin"
                        android:gravity="bottom|center_horizontal"
                        android:text="1" />

                    <Button
                        android:id="@+id/shopping_cart_item_btn_plus"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="-1dp"
                        android:background="@drawable/text_margin"
                        android:focusable="false"
                        android:text="+" />

                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>