<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/order_details_stl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tl_underline_color="@color/colorDividerLine"
        android:background="@android:color/white"
        app:tl_underline_gravity="BOTTOM"
        app:tl_underline_height="0.5dp"
        app:tl_indicator_color="@color/colorBtn"
        app:tl_indicator_margin_left="20dp"
        app:tl_indicator_margin_right="20dp"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="@color/colorBtn"
        app:tl_textUnselectColor="@color/colorGrayText"
        app:tl_textsize="16sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/order_details_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>