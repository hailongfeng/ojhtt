<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_item_corner"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/shopping_item_tv_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/store_ys"
                    android:textColor="@color/colorGrayText"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/shopping_item_tv_ys"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/colorGrayText"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/shopping_item_ll_xg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/store_xg"
                    android:textColor="@color/colorGrayText"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/shopping_item_tv_xg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="2"
                    android:textColor="@color/colorGrayText"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/store_kc"
                    android:textColor="@color/colorGrayText"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/shopping_item_tv_kc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="999"
                    android:textColor="@color/colorGrayText"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorDividerLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/shopping_item_iv_pic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:src="@drawable/default_pic" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/shopping_item_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/shopping_item_tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/colorBtn"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DTI"
                        android:textColor="@color/colorBtn"
                        android:textSize="14sp" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorDividerLine" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/shopping_tv_join"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/shopping_item_btn_minus"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/text_margin"
                    android:text="-" />

                <TextView
                    android:id="@+id/shopping_item_tv_num"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-1dp"
                    android:background="@drawable/text_margin"
                    android:gravity="center"
                    android:text="1" />

                <Button
                    android:id="@+id/shopping_item_btn_plus"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-1dp"
                    android:background="@drawable/text_margin"
                    android:text="+" />

            </LinearLayout>

            <TextView
                android:id="@+id/shopping_tv_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_button_corner_margin"
                android:paddingStart="5dp"
                android:paddingTop="2dp"
                android:paddingEnd="5dp"
                android:paddingBottom="2dp"
                android:text="@string/add_store"
                android:textColor="@color/colorBtn"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>